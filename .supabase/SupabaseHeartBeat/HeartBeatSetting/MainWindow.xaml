<Window x:Class="HeartBeatSetting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Heartbeat Settings" Height="520" Width="600" MinHeight="520" MinWidth="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16" Orientation="Vertical">
            <TextBlock Text="Supabase 設定" FontWeight="SemiBold" Margin="0,0,0,8" />

            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="URL" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,6" />
                <TextBox Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,6" />

                <TextBlock Text="Key" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,6" />
                <TextBox Text="{Binding Key, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,6" />

                <TextBlock Text="Client ID" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,6" />
                <TextBox Text="{Binding ClientId, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,6" />

                <TextBlock Text="Bucket" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,6" />
                <TextBox Text="{Binding Bucket, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Margin="0,0,0,6" />

                <TextBlock Text="Object Prefix" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Text="{Binding ObjectPrefix, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" />
            </Grid>

            <Separator Margin="0,0,0,12" />

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12" HorizontalAlignment="Right">
                <Button Content="設定を読み込み" Command="{Binding LoadCommand}" Width="120" Margin="0,0,8,0" />
                <Button Content="設定を保存" Command="{Binding SaveCommand}" Width="120" />
            </StackPanel>

            <TextBlock Text="タスクスケジューラ設定" FontWeight="SemiBold" Margin="0,0,0,8" />

            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Heartbeat exe パス" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,6" />
                <TextBox Text="{Binding HeartbeatExePath, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="0,0,8,6" />
                <Button Content="実行" Command="{Binding RunHeartbeatCommand}" Grid.Row="0" Grid.Column="2" Width="70" Margin="0,0,0,6" />

                <TextBlock Text="作業ディレクトリ" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,6" />
                <TextBox Text="{Binding WorkingDirectory, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,6" Grid.ColumnSpan="2" />

                <TextBlock Text="毎日実行時刻 (HH:mm)" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,6" />
                <TextBox Text="{Binding DailyTimeText, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,6" Grid.ColumnSpan="2" />

                <CheckBox Content="ログオン時も実行" IsChecked="{Binding AddLogonTrigger}" Grid.Row="3" Grid.ColumnSpan="3" />
            </Grid>

            <Separator Margin="0,0,0,12" />

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12" HorizontalAlignment="Right">
                <Button Content="タスクを登録/更新" Command="{Binding RegisterTaskCommand}" Width="160" Margin="0,0,8,0" />
                <Button Content="タスクを削除" Command="{Binding DeleteTaskCommand}" Width="120" />
            </StackPanel>

            <TextBlock Text="ステータス" FontWeight="SemiBold" />
            <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" Margin="0,4,0,0" />
        </StackPanel>
    </ScrollViewer>
</Window>
